{{> header}}
<h1>Dashboard</h1>

<h2>Your Blog Posts</h2>
<ul>
  {{#each userBlogPosts}}
    <li>
      <strong><a href="/blog/{{this.id}}">{{this.title}}</a></strong>
      <form action="/dashboard/{{this.id}}/update" method="post">
        <input type="text" name="title" placeholder="New Title">
        <textarea name="contents" placeholder="New Contents"></textarea>
        <button type="submit">Update</button>
      </form>
      <form action="/dashboard/{{this.id}}/delete" method="post">
        <button type="submit">Delete</button>
      </form>
    </li>
  {{/each}}
</ul>

<h2>Create a New Blog Post</h2>
<form action="/dashboard/create" method="post">
  <input type="text" name="title" placeholder="Title" required>
  <textarea name="contents" placeholder="Contents" required></textarea>
  <button type="submit">Create</button>
</form>

{{> footer}}
