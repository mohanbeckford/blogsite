

{{!< main}}

{{> header}}

<div class="row tophead">
    <div class="col">
      <h1 class="text-center py-2" style="background-color: #007BFF; color: white;">Edit Blog Post</h1>
    </div>
  </div>

<section class="hero has-background-grey-lighter">
    <div class="hero-body">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col">
                    <form action="" class="box">
                        <h3 class="label is-large">Edit Blog Post</h3>
                        <div class="form-group">
                            <strong><label for="title" class="label mt-3">Title</label></strong>
                            <div class="control">
                                <input
                                    type="text"
                                    class="form-control subject-input"
                                    id="title"
                                    placeholder="10 Ways Express.js Makes Creating REST API's Easier"
                                    value="{{postData.title}}"
                                    required
                                />
                            </div>
                        </div>
                        <div class="form-group">
                            <strong><label for="content" class="label">Content</label></strong>
                            <div class="control">
                                <textarea
                                    class="form-control content-input"
                                    id="content"
                                    placeholder="Building an API is a rewarding way to allow data to flow between apps and create compelling functionality in your latest project without having to start from scratch..."
                                    required
                                >{{postData.content}}</textarea>
                            </div>
                        </div>
                        <div class="form-group text-right mt-3">
                            <button class="btn button btn-success edit-submit">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="current-post-id d-none">{{postData.id}}</div>
</section>

{{> footer}}
<script src="/public/js/edit.js"></script>
