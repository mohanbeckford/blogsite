{{> header}}
 <div class="row">
    <div class="col">
      <h1 class="text-center py-2" style="background-color: #007BFF; color: white;">Blog Post</h1>
    </div>
  </div>

    <main class="container mt-4">
        <article class="post">
            {{#each post3}}
            <h1>{{title}}</h1>
            <p class="post-content">{{content}}</p>
            {{/each}}
            <br><br>
            <h2>Comments</h2>
            <br>
            {{#each comments2}}
            <div class="card comment">
                <div class="card-body">
                    <p class="card-text">{{comment}}</p>
                    <p class="card-text text-muted">By {{username}} on {{createdAt}}</p>
                </div>
            </div>
            {{/each}}
            <h3>Add a Comment</h3>
            <form method="POST" action="/posts/add-comment">
                <script>
                    document.write('<input type="hidden" name="post_Id" value="{{pid}}">');
                    document.write('<input type="hidden" name="commentsurl" value="' + location.href + '">');
                </script>
                
                <div class="form-group">
                    <label for="comment">Write your comment:</label>
                    <textarea class="form-control" name="content" id="comment" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </article>
    </main>

 {{> footer}}
