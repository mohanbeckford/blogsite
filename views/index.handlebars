

{{!< main}}

{{> header}}

    <section class="container mt-3  tophead" >
        <div class="row">
            <div class="col-12">
                <h1 class="text-center py-2" style="background-color: #007BFF; color: white;">Welcome To Mohan's Blog Site</h1>
            </div>
        </div>
    </section>

    <section class="container mt-4">
        <div class="row">
            <div class="col">
                <div class="card mb-4">
                    <h3  class="card-body latest" > LATEST POST</h3>
                    <div class="card-body">
                        <h3 class="card-title"><a href="/post/{{posts.0.0.id}}">{{posts.0.0.title}}</a></h3>
                        <p class="card-text">{{posts.0.0.content}}</p>

                    <hr>
          <p class="small">
            <strong class="mr-2">Author:</strong>{{posts.0.0.user.username}} |
            <strong class="ml-2 mr-2">Created on:</strong>{{format_time posts.0.0.createdAt}}
          </p>
          <hr>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <hr>
    

    <section class="container mt-5">
        <h3  class="card-body latest" > PREVIOUS POST</h3>
        <div class="row">
            <div class="col-12">
                {{#each posts as |post|}}
                    {{#if @first}}
                        <!-- Don't post 1st one because it goes up top -->
                    {{else}}
                        {{> post-summary}}
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </section>

   {{> footer}}

    <script src="/public/js/main.js"></script>

